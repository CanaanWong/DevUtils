<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="afkt.jpush">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:name="afkt.jpush.base.BaseApplication"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="afkt.jpush.ui.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:launchMode="singleTask"
            android:name="afkt.jpush.ui.activity.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:exported="false"
            android:name="afkt.jpush.ui.activity.OtherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:exported="false"
            android:name="afkt.jpush.ui.activity.MessageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- ============= -->
        <!-- 推送消息路由处理 -->
        <!-- ============= -->

        <activity
            android:exported="false"
            android:name="afkt.jpush.router.PushRouterActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>